    <TextView
        android:id="@+id/purchaseTextview5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        android:text="@string/cash"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/purchaseCash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseTextview4" />

    <TextView
        android:id="@+id/purchaseTextview6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        android:text="@string/accountPayable"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/purchaseAccountPayable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseTextview5" />

    <EditText
        android:id="@+id/purchaseCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseTotalCost" />

    <TextView
        android:id="@+id/purchaseAccountPayable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="112dp"
        android:text="@string/totalInitial"
        android:textColor="@color/colorSecondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseCash" />

    <Button
        android:id="@+id/purchaseDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_ui"
        android:onClick="purchaseDoneEvent"
        android:text="@string/done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseAccountPayable" />

</androidx.constraintlayout.widget.ConstraintLayout>